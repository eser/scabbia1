{
    "extensionInfoList": [
        {
            "name":             "Logger",
            "version":          "1.1.0",
            "license":          "GPLv3",
            "phpversion":       "5.3.7",
            "phpdependList":    [],
            "fwversion":        "1.1",
            "fwdependList":     [
                "Helpers"
            ]
        }
    ],

    "eventList": [
        {
            "name":         "load",
            "type":         "callback",
            "value":        "Scabbia\\Extensions\\Logger\\Logger::extensionLoad"
        }
    ],

    "logger": {
        "filename":     "{date|'d-m-Y'} {@category}.txt",
        "line":         "[{date|'d-m-Y H:i:s'}] {strtoupper|@category} | {@ip} | {@location} | {@message}"
    }
}
